{
    "name": "luccpl/sonata",
    "autoload": {
        "psr-4": {
            "Sonata\\": "modules/core",
            "Sonata\\Testing\\": "modules/testing",
            "Sonata\\Doctrine\\": "modules/doctrine"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Luc-cpl",
            "email": "lucas.carvalhopl@outlook.com"
        }
    ],
    "scripts": {
        "pest": "vendor/bin/pest",
        "pest:coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage --coverage-html=coverage"
    },
    "require": {
        "luccpl/orkestra": "dev-release/1.1.0"
    },
    "require-dev": {
        "doctrine/orm": "^3.1",
        "doctrine/dbal": "^4.0",
        "pestphp/pest": "^2.34",
        "symfony/cache": "^7.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
